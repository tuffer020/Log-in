<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.christophercassion.demo.cancel_res">

    <EditText android:id="@+id/cancel_confirm_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/client_email" />

    <TextView
        android:id="@+id/info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Please Enter your Email For Confirmation"
        />

    <Button
        android:id="@+id/finish_cancellation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:clickable="true"/>

</TableLayout>
